
    <%- include('./partials/head') %>
    <link ref="icon" href="https://img.icons8.com/?size=100&id=80347&format=png&color=000000" type="image/png">
    <title>home</title>
    <style>
        footer{
            display: flex;
            flex-direction: column;
            /* min-height: 100%; */
           /* / margin-bottom: 0%; */
            margin-top: 100%;
        }
        body{
            height: 100%;
            width: auto;
        }
    </style>
</head>
<body style="background-image:linear-gradient(to right, #84f0d5, #abe675, #86a8e7, #7f7fd5) ; background-size: cover;">
    <header style="position:relative;">
        <%- include('./partials/nav') %>
    </header>
    
   

        
      

    <div class="container  py-4">
    <div class="row g-5"> 
        
        <% blog.forEach(blogs => { %>
            <div class="col-md-4 h-2"> 
                <div class="card rounded-5 p-2 bg-dark text-white" style="width: 100%;">
                    <img style="height: 250px;"  src="./uploads/<%= blogs.coverImage %>" class="card-img-top rounded-4" alt="...">
                    <div class="card-body">
                        <h5 class="card-title text-uppercase fw-bold text-center"> <%= blogs.title %> </h5>
                        <!-- <p class="card-text"> <%= blogs.body %></p> -->
                        <div class="d-grid gap-2 mt-2 col-6 mx-auto">
                        <a href="/blog/<%= blogs._id %>" class="btn btn-primary ">Visit</a>
                        </div>
                        
                    </div>
                </div>
            </div>
        <% }) %>

    </div>
</div>
            

    
    
   
    <footer>
        <%- include('./partials/footer') %>
    </footer>
    <%- include('./partials/scr') %>
</body>
</html>
